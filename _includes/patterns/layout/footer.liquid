<footer class="footer">
  {% unless page.url == '/rsvp/' %}
  <div class="rsvp-cta island giga text-center">
    <span class="push-r">Don't forget to </span>{% include patterns/btn/btn.liquid text="RSVP" url="/rsvp/" class="btn-large btn-white" %}
  </div>
  {% endunless %}
  <div class="wrapper grid pad-t-2 pad-b-2 gutter-1-2">
    <div class="unit [ xs-1 l-1-3 ] island-1-2">
      <a href="/">
        {% include utilities/graphics/logo.liquid class="giga" %}
      </a>
    </div>
    <div class="unit [ xs-1 s-1-2 l-1-3 ] island-1-2">
      {% include utilities/nav.liquid class="nav-footer pad-t-1-4 text-upper" id="nav-footer" %}
    </div>
    <div class="unit [ xs-1 s-1-2 l-1-3 ] island-1-2">
      <p class="pad-t-1-4">Use <strong>#stegan2020</strong> to share your posts with the whole wedding!</p>
      <ul class="icon-list push-0 list-group-inline">
        <li class="push-r-1-2">
          <a class="icon-link" href="https://www.instagram.com/explore/tags/stegan2020/">
            <i class="icon i-1">
              <svg><use xlink:href="{{site.baseurl}}/images/icons.svg#instagram" /></svg>
            </i>
            <span class="icon-label hidden">Instagram</span>
          </a>
        </li>
        <li>
          <a class="icon-link" href="https://www.facebook.com/search/top/?q=%23stagan2020&epa=SEARCH_BOX">
            <i class="icon i-1">
              <svg><use xlink:href="{{site.baseurl}}/images/icons.svg#facebook" /></svg>
            </i>
            <span class="icon-label hidden">Facebook</span>
          </a>
        </li>
      </ul>
    </div>
  </div>
  <div class="sub-footer">
    <div class="wrapper grid grid-bottom island-1-2">
      <div class="unit [ xs-1 m-1-2 ] island-1-2">
